<odoo>
    <data>
     <record model="ir.ui.view" id="runescape.armor_form">
      <field name="name">runescape armor</field>
      <field name="model">runescape.armor</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="armor_image" widget="image"/>
                <field name="name"/>
                <field name="defense"/>
                <field name="price"/>
                <field name="material"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>
      <record model="ir.ui.view" id="runescape.armor_list">
      <field name="name">runescape armor</field>
      <field name="model">runescape.armor</field>
      <field name="arch" type="xml">
        <tree>
            <field name="armor_image" widget="image"/>
          <field name="defense"/>
          <field name="price"/>
          <field name="name"/>
        </tree>
      </field>
    </record>

    </data>
</odoo>