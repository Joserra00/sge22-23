<odoo>
    <data>
        <record model="ir.ui.view" id="runescape.player_kanban_view">
            <field name="name">Runescape player</field>
            <field name="model">runescape.player</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="id"/>
                    <field name="name"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_card o_kanban_record_has_image_fill" >
                                 <div class="o_kanban_image_fill_left o_kanban_image_full d-none d-md-block "
                                                         t-attf-style="background-image:url('#{kanban_image('runescape.player', 'avatar', record.id.value, placeholder)}')">
                                                    </div>


                                    <div class="oe_kanban_details d-flex flex-column" >
                                        <a type="open">
                                            <h4 class="o_kanban_record_title oe_partner_heading">
                                                <field name="name"/>
                                            </h4>
                                        </a>
                                        <ul>
                                            <li>Strength:
                                                <field name="strength"/>
                                            </li>
                                            <li>Coins:
                                                <field name="coins"/>
                                            </li>
                                             <li>Hp:
                                                <field name="hp"/>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                        </t>
                    </templates>


                </kanban>
            </field>
        </record>

        <record model="ir.ui.view" id="runescape.player_search">
            <field name="name">runescape search</field>
            <field name="model">runescape.player</field>
            <field name="arch" type="xml">
            <search>
            <field name="name"/>
            <field name="travel_name"/>
            <field name="travel_type"/>
            <filter name="group_travel" string="Group By Travel" context="{'group_by': 'sword'}"/>
        </search>
            </field>
        </record>

        <record model="ir.ui.view" id="runescape.player_form">
            <field name="name">runescape list</field>
            <field name="model">runescape.player</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="avatar" widget="image"/>
                                <field name="name"/>
                                <field name="password" password="true"/>
                                <field name="hp"/>
                                <field name="coins"/>
                                <field name="strength"/>
                            </group>
                            <notebook>
                                <page name="inventory" string="Inventory">
                            <group>
                                <field name="armor_image" widget="image"/>
                                <field name="armor"/>
                                <field name="defense"/>
                                <field name="armor_price"/>
                                <field name="sword_image" widget="image"/>
                                <field name="sword" mode="tree"/>
                                <field name="damage"/>
                                <field name="sword_price"/>

                            </group>
                            </page>
                                <page string="Buy inventory">
                                    <group>

                                        <group>
                                            <field name="armorBuy"/>
                                            <field name="armorBuy_price"/>
                                            <field name="armorBuy_image" widget="image"/>
                                            <button name="buy_armor"
                                              type="object"
                                              string="Buy armor"
                                              class="btn btn-primary"
                                              attrs="{'invisible':[('armorBuy_price', '==', 0)]}"
                                            ></button>
                                        </group>
                                            <group>
                                                <field name="swordBuy"/>

                                                <field name="swordBuy_price"/>
                                                <field name="swordBuy_image" widget="image"/>
                                                <button name="buy_sword"
                                                  type="object"
                                                  string="Buy sword"
                                                  class="btn btn-primary"
                                                  attrs="{'invisible':[('swordBuy_price', '==', 0)]}"
                                                ></button>
                                            </group>

                                    </group>
                                </page>
                        </notebook>
                            <group>
                                <separator string="Location"></separator>
                                <field name="travel_name"></field>
                                <field name="travel_type"></field>

                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
    </data>
</odoo>