<odoo>
    <data>
      <record model="ir.ui.view" id="runescape.player_wizard_form">
            <field name="name">runescape player wizard</field>
            <field name="model">runescape.player_wizard</field>
            <field name="arch" type="xml">
                <form>

                        <group>
                            <field name="avatar" widget="image"/>
                            <field name="name"/>
                            <field name="password" password="True"/>
                            <field name="is_player"/>
                        </group>

                     <footer>
                        <button name="create_player" type="object"
                                string="Create" class="oe_highlight"/>
                        <button special="cancel" string="Cancel"/>
                    </footer>

                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="runescape.travel_wizard">
            <field name="name">runescape wizard</field>
            <field name="model">runescape.travel_wizard</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                    
                    </header>
                    <sheet>
                <group>
                    <field name="player" />
                    <field name="travel_to"/>
                    <field name="price"/>
                    <field name="dungeon" attrs="{'invisible':[('travel_to', '=', '1')]}"/>
                    <field name="zone" attrs="{'invisible':[('travel_to', '=', '2')]}"/>
                    <field name="date_start"/>
                    <field name="date_end"/>
                    <button name="battle_mob" type="object" string="Battle" class="oe_highlight" attrs="{'invisible':[('travel_to', '!=', '2')]}" />
                    <field name="mob" attrs="{'invisible':[('travel_to', '=', '1')]}"/>


                </group>
                  <footer>
                        <button name="launch_travel" type="object"
                                string="Create" class="oe_highlight"/>
                        <button special="cancel" string="Cancel"/>
                    </footer>
                    </sheet>
                </form>
            </field>
            </record>
        <record model="ir.ui.view" id="runescape.battle_wizard">
      <field name="name">runescape battle wizard</field>
      <field name="model">runescape.battle_wizard</field>
      <field name="arch" type="xml">
        <form>
             <header>
            <button name="back"
                    type="object"
                    string="Back"
                    class="btn btn-primary"

            ></button>
            <button name="next"
                    type="object"
                    string="Next"
                    class="btn btn-primary"

            ></button>
          
            <field name="state" widget="statusbar" />
          </header>
          <sheet>
           <group states="1">

              <field name="player1"/>
              <field name="player1_bet" string="Apuesta"/>

             </group>
            <group states="2">

              <field name="player2"/>
              <field name="player2_bet" string="Apuesta"/>
                   
            </group>
            <group states="3">

              <field name="date_start"/>
              <field name="date_end"/>
              <button name="launch_battle" type="object" string="Launch Battle(Instantly)"/>
                   
            </group>
            <footer>
                        <button name="create_battle" type="object"
                                string="Create" class="oe_highlight"/>
                        <button special="cancel" string="Cancel"/>
            </footer>
          </sheet>
        </form>
      </field>
    </record>
        <record id="runescape.travel_wizard_action" model="ir.actions.act_window">
      <field name="name">Create travel</field>
      <field name="res_model">runescape.travel_wizard</field>
      <field name="view_mode">form</field>
      <field name="target">new</field>
      <field name="binding_model_id" ref="base.model_res_partner"/>
    </record>

        <record id="runescape.player_wizard_action" model="ir.actions.act_window">
            <field name="name">Create Player</field>
            <field name="res_model">runescape.player_wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="binding_model_id" ref="base.model_res_partner"/>
        </record>

        <record id="runescape.battle_wizard_action" model="ir.actions.act_window">
            <field name="name">Create Battle</field>
            <field name="res_model">runescape.battle_wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="binding_model_id" ref="base.model_res_partner"/>
        </record>
        <record model="ir.ui.view" id="runescape.player_list">
        <field name="name">runescape player</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <tree decoration-info="travel_type=='City'" decoration-danger="travel_type=='Dungeon'">
                <field name="avatar" widget="image"/>
                    <field name="name"/>
                    <field name="hp"/>
                    <field name="coins"/>
                    <field name="strength"/>
                    <field name="travel_type"/>
                
            </tree>
        </field>
        </record>
        <record model="ir.ui.view" id="runescape.player_kanban_view">
            <field name="name">Runescape player</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="id"/>
                    <field name="name"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_card o_kanban_record_has_image_fill" >
                                 <div class="o_kanban_image_fill_left o_kanban_image_full d-none d-md-block "
                                                         t-attf-style="background-image:url('#{kanban_image('runescape.player', 'avatar', record.id.value, placeholder)}')">
                                                    </div>


                                    <div class="oe_kanban_details d-flex flex-column" >
                                        <a type="open">
                                            <h4 class="o_kanban_record_title oe_partner_heading">
                                                <field name="name"/>
                                            </h4>
                                        </a>
                                        <ul>
                                            <li>Strength:
                                                <field name="strength"/>
                                            </li>
                                            <li>Coins:
                                                <field name="coins"/>
                                            </li>
                                             <li>Hp:
                                                <field name="hp"/>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                        </t>
                    </templates>


                </kanban>
            </field>
        </record>

        <record model="ir.ui.view" id="runescape.player_search">
            <field name="name">runescape search</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
            <search>
            <field name="name"/>
            <field name="travel_name"/>
            <field name="travel_type"/>
            <filter name="player_partner" string="Is Player" domain="[('is_player','=',True)]" />
            <filter name="group_travel" string="Group By Sword" context="{'group_by': 'sword'}"/>
        </search>
            </field>
        </record>

        <record model="ir.ui.view" id="runescape.player_form">
            <field name="name">runescape list</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="avatar" widget="image"/>
                                <field name="name"/>
                                <field name="password" password="true"/>
                                <field name="hp"/>
                                <field name="coins"/>
                                <field name="strength"/>
                                <button name="aumentar_strength" type="object" string="Increase Strength"/>
                                <button name="disminuir_strength" type="object" string="Decrease Strength"/>
                                <field name="is_player"/>
                                <button name="generate_battle" type="object" string="New Battle" class="oe_highlight" />
                            </group>
                            <notebook>
                                <page name="inventory" string="Inventory">
                            <group>
                                <group>
                                <field name="armor_image" widget="image"/>
                                <field name="armor"/>
                                <field name="defense"/>
                                <field name="armor_price"/>
                                </group>
                                <group>
                                <field name="sword_image" widget="image"/>
                                <field name="sword" mode="tree"/>
                                <field name="damage"/>
                                <field name="sword_price"/>
                                </group>
                            </group>
                            </page>
                                <page string="Buy inventory">
                                    <group>

                                        <group>
                                            <field name="armorBuy"/>
                                            <field name="armorBuy_price"/>
                                            <field name="armorBuy_image" widget="image"/>
                                            <button name="buy_armor"
                                              type="object"
                                              string="Buy armor"
                                              class="btn btn-primary"
                                              attrs="{'invisible':[('armorBuy_price', '==', 0)]}"
                                            ></button>
                                        </group>
                                            <group>
                                                <field name="swordBuy"/>
                                                <field name="swordBuy_price"/>
                                                <field name="swordBuy_image" widget="image"/>
                                                <button name="buy_sword"
                                                  type="object"
                                                  string="Buy sword"
                                                  class="btn btn-primary"
                                                  attrs="{'invisible':[('swordBuy_price', '==', 0)]}"
                                                ></button>
                                            </group>
                                        <separator string="Money after buy"></separator>
                                        <field name="money_after_buy"/>
                                    </group>
                                </page>
                        </notebook>
                            <group>
                                <separator string="Location"></separator>
                                <field name="travel_name"></field>
                                <field name="travel_type"></field>
                                <button name="generate_travel" type="object" string="New Travel" class="oe_highlight" />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
    </data>
</odoo>